[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503,B950,B905
# Remove B905 when Python <3.10 support will be dropped
max-line-length = 80
max-complexity = 10
docstring-convention = google
per-file-ignores = tests/*:S101,S113
# TODO: Fix S113 in new version, then remove from ignore list
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
